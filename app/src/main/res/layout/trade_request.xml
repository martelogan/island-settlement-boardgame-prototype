        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dip" >

        <Spinner
            android:id="@+id/trade_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/trade_requesting" >
